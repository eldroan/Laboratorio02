<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GestionarDBActivity">


    <Button
        android:id="@+id/btnNuevaCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nueva Categoria" />

    <Button
        android:id="@+id/btnNuevoProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nuevo Producto" />

    <Button
        android:id="@+id/btnNuevoPedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nuevo Pedido" />

    <Button
        android:id="@+id/btnBorrarTodo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Borrar Todo" />

    <TextView
        android:id="@+id/labelDB"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="TextView" />

</android.widget.LinearLayout>